# Application
NODE_ENV=development
PORT=3000
APP_NAME=DrAsya Backend

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=asya_db

# Prisma Database URL
DATABASE_URL="postgresql://postgres:password@localhost:5432/asya_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
CACHE_TTL=300
CACHE_MAX=100

# Rate limiting
THROTTLE_TTL=1000
THROTTLE_LIMIT=10

# Security
MAX_REQUEST_SIZE=10485760
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug 