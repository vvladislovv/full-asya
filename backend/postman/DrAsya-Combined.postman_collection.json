{
    "info": {
        "name": "DrAsya - Backend + Bot",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000"
        },
        {
            "key": "bot_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "jwt_token",
            "value": ""
        },
        {
            "key": "telegram_id",
            "value": "377920598"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "üîê Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"telegramId\": \"{{telegram_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code===200){",
                                    " const r=pm.response.json();",
                                    " pm.collectionVariables.set('jwt_token', r.access_token);",
                                    " pm.collectionVariables.set('user_id', r.user.id);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Profile",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/auth/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
